#!/usr/bin/make -f
# -*- makefile -*-

export DH_VERBOSE=1
export DH_ALWAYS_EXCLUDE=.git:*.pyc:*.pyo:__pycache__:.coverage
export PYBUILD_NAME=shelter

%:
	dh $@ --with python2,python3 --buildsystem=pybuild

override_dh_python3:
	dh_python3
	mv $(CURDIR)/debian/python3-shelter/usr/bin/shelter-admin $(CURDIR)/debian/python3-shelter/usr/bin/shelter-admin-3

override_dh_clean:
	dh_clean
	rm -f $(CURDIR)/*.egg
	rm -f $(CURDIR)/.coverage
